<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Anomy.Views.AddUpdateDetailAccount"
             Title="Nueva Contraseña" BackgroundColor="#F4F4F4">

    <StackLayout Margin="10" Spacing="15">
        <VerticalStackLayout>
            <Label Text="Cuenta"  />
            <Entry Text="{Binding AccountDetail.SocialMedia}" Placeholder="Cuenta" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>


        <VerticalStackLayout>
            <Label Text="Correo electronico" />
            <Entry  Text="{Binding AccountDetail.Email}" Placeholder="Correo electronico" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>


        <VerticalStackLayout>
            <Label Text="Contraseña" />
            <Entry Text="{Binding AccountDetail.Password}" Placeholder="Contraseña" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>


        <Button        Text="Guardar" 
                       TextColor="White" 
                       BackgroundColor="#150420" 
                       FontSize="15" 
                       HeightRequest="50" 
                       CornerRadius="20"
                       Margin="15,15,15,15"
                       Command="{Binding AddUpdateAccountCommand}"/>
    </StackLayout>
</ContentPage>