             x:Class="Anomy.Views.AccountsPage"
             xmlns:models="clr-namespace:Anomy.Models"
             xmlns:viewmodels="clr-namespace:Anomy.ViewModel"
             x:DataType="viewmodels:AccountsViewModel"
             Title="Cuentas" BackgroundColor="#F4F4F4">

    <StackLayout Margin="10">
        <ImageButton  Command="{Binding AddUpdateAccountCommand}" 
                      WidthRequest="40"
                      HeightRequest="40"
                      CornerRadius="40"
                      Source="add.svg"
                      VerticalOptions="End"
                      Margin="20,20"
                      HorizontalOptions="EndAndExpand"/>
        <CollectionView ItemsSource="{Binding Accounts}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AccountsModel">
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem Text="Edit" IconImageSource="edit" BackgroundColor="LightBlue" 
                                           CommandParameter="{Binding .}"
                                           Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodels:AccountsViewModel}},Path= EditAccountCommand}" />
                                <SwipeItem Text="Delete" IconImageSource="delete" BackgroundColor="Red"  CommandParameter="{Binding .}"
                                           Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodels:AccountsViewModel}},Path= DeleteAccountCommand}" />
                            </SwipeItems>
                        </SwipeView.LeftItems>
                        <NeoFrame CornerRadius="30"
                                  Elevation=".1"
                                  BackgroundColor="#F4F4F4">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding SocialMedia}"
                                           VerticalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           TextColor="Black"
                                           Padding="25"
                                           FontSize="Medium"/>
          
                                <!--<Image Source="{Binding imagesource}"
                                               HeightRequest="30"
                                               VerticalOptions="End"/>-->
                            </StackLayout>
                        </NeoFrame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>

